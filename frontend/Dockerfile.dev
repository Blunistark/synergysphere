FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY bun.lockb ./

# Install bun
RUN npm install -g bun

# Install dependencies
RUN bun install

# Copy application code
COPY . .

# Expose port
EXPOSE 8080

# Start development server
CMD ["bun", "run", "dev", "--host", "0.0.0.0", "--port", "8080"]
